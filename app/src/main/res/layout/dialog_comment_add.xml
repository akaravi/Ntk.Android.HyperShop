<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/lblTitleDialogAddComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ارسال نظر"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

    <EditText
        android:id="@+id/txtNameDialogAddComment"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/background_edittext"
        android:hint="نام نظر دهنده"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/txtContentDialogAddComment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/background_edittext"
        android:gravity="right|top"
        android:hint="متن نظر"
        android:inputType="textMultiLine"
        android:padding="15dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnSubmitDialogCommentAdd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:text="ارسال"
        android:textColor="@color/colorWhite"
        android:textSize="17sp"
        tools:ignore="HardcodedText" />
</LinearLayout>