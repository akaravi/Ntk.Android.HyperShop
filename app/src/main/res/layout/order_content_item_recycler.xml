<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clickable="false"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtItemName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:gravity="right"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/colorItemName"
        android:textSize="15sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/txtProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgAddProduct" />

        <ImageView
            android:id="@+id/imgRemoveProduct"
            card_view:tint="@color/colorAccent"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="8dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_minus" />


        <TextView
            android:id="@+id/txtProductCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgRemoveProduct" />

        <ImageView
            android:id="@+id/imgAddProduct"
            card_view:tint="@color/colorAccent"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/txtProductCount"
            android:contentDescription="@null"
            android:src="@drawable/ic_plus_pool" />

    </RelativeLayout>

    <include layout="@layout/app_line" />
</LinearLayout>


