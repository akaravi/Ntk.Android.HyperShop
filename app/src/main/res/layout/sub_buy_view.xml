<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/buy_view_plus"
        layout="@layout/product_add_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_toRightOf="@+id/buy_view_txtCount"
        android:visibility="gone" />

    <TextView
        android:id="@+id/buy_view_txtCount"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/colorTextPrimary"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <include
        android:id="@+id/buy_view_mines"
        layout="@layout/product_mines_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_toLeftOf="@+id/buy_view_txtCount"
        android:visibility="gone" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mbtnAdd"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="افزودن"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        app:strokeColor="@color/colorAccent" />


</RelativeLayout>