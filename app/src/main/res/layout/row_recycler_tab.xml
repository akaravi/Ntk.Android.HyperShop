<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/RippleBtnRecyclerTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginStart="5dp"
        app:mrl_rippleAlpha="0.05"
        app:mrl_rippleColor="#10000000"
        app:mrl_rippleRoundedCorners="100dp">

        <Button
            android:id="@+id/BtnRecyclerTab"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/background_small" />
    </com.balysv.materialripple.MaterialRippleLayout>

    <WebView
        android:id="@+id/WebViewActDetailNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="WebViewLayout" />
</LinearLayout>