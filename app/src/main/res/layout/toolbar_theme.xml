<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ContainerRecyclerToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:src="@drawable/logo" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/RippleHamberRecyclerToolbar"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            app:mrl_rippleAlpha="0.05"
            app:mrl_rippleColor="#10000000"
            app:mrl_rippleRoundedCorners="100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ImgHamberRecyclerToolbar"
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null" />
            </RelativeLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/RippleShoppingCartRecyclerToolbar"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            app:mrl_rippleAlpha="0.05"
            app:mrl_rippleColor="#10000000"
            app:mrl_rippleRoundedCorners="100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ImgShoppingCartRecyclerToolbar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null" />
            </RelativeLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/RippleSearchRecyclerToolbar"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/RippleShoppingCartRecyclerToolbar"
            app:mrl_rippleAlpha="0.05"
            app:mrl_rippleColor="#10000000"
            app:mrl_rippleRoundedCorners="100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ImgSearchCartRecyclerToolbar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null" />
            </RelativeLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

    </RelativeLayout>

    <View
        android:id="@+id/LineRecyclerToolbar"
        android:layout_width="match_parent"
        android:layout_height="3dp" />
</LinearLayout>